# Monumento - Environment Variables Template
# Copy this file to .env.local in each service directory and fill in your values

# =============================================================================
# FRONTEND (frontend-web/)
# =============================================================================

# Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# API Base URL (points to backend)
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Environment
VITE_ENV=development

# =============================================================================
# BACKEND (backend/)
# =============================================================================

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/monumento
DATABASE_USERNAME=monumento_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_MAX_POOL_SIZE=10

# Redis (Caching & Session)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Authentication
JWT_SECRET=your_very_long_random_secret_key_here_minimum_256_bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Gemini API (Server-side)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI API (Whisper for transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Cloud Storage (Cloudflare R2)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=monumento-videos
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@monumento.app

# Stripe (Payment Processing)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# MOBILE APP (frontend-mobile/)
# =============================================================================

API_BASE_URL=http://localhost:8080/api/v1
GEMINI_API_KEY=your_gemini_api_key_here
ENV=development

# =============================================================================
# INFRASTRUCTURE
# =============================================================================

# Docker Compose
COMPOSE_PROJECT_NAME=monumento

# Terraform (Production)
TF_VAR_aws_region=us-east-1
TF_VAR_environment=production
TF_VAR_domain_name=monumento.app
